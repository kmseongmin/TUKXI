<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F0F0">

    <!-- 채팅방 이름 -->
    <TextView
        android:id="@+id/chatRoomNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="채팅방 이름"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- 현재 참여 중인 사람 목록 -->
    <TextView
        android:id="@+id/participantsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="참여 중인 사람들:"
        android:textSize="16sp"
        android:textColor="#666666"
        android:paddingBottom="8dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <!-- 사람 목록을 동적으로 추가할 수 있는 ListView -->
        <ListView
            android:id="@+id/participantsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#CCCCCC"
            android:dividerHeight="1dp" />

    </LinearLayout>

    <!-- 확정 버튼 -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확정"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#FF4081"
        android:layout_gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- 출발지와 목적지 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- 출발지 -->
        <TextView
            android:id="@+id/departureTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="출발지:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- 목적지 -->
        <TextView
            android:id="@+id/destinationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="목적지:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/returnbutton"
            android:text="채팅방으로 돌아가기"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/exit"
            android:text="나가기"
            />
    ></LinearLayout>
</LinearLayout>

